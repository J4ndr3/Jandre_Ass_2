@model Ass2.ViewModels.AdView
@using Ass2.ViewModels
@using System.Globalization
@using System.Data
@{
    ViewBag.Title = "Advanced";
}

<h2>Sales</h2>

<h1>Purchases from Vendor:</h1>
<div class="criteria">
    @* Create a HTML Form so that users can enter criteria for the Advanced Report *@
    @using (Html.BeginForm("Advanced", "Home", FormMethod.Post))
    {
        <label>Select Employee</label>
        @Html.DropDownListFor(m => m.Empid, Model.EmpNames, "-- Please select --", new { @class = "form-control" })
        <label>From</label>
        @Html.TextBoxFor(m => m.DateFrom, "yyyy-MM-dd", new { @Value = "2011-05-01", @type = "date", @class = "form-control" })
        <label>To</label>
        @Html.TextBoxFor(m => m.DateTo, "yyyy-MM-dd", new { @Value = "2011-05-31", @type = "date", @class = "form-control" })
        <br />
        <input type="submit" value="Generate" class="btn btn-primary" />
    }
</div>
<hr />
@* The next section of the page will only show if report data have been returned (i.e. after criteria have been entered and processed) *@
    @if (Model.empName != null)
    {
        //this first panel shows general details of the selected vendor
        <div class="panel panel-success">
            <div class="panel-heading"><strong>Employee Name: </strong>@Model.empName.emp_fname</div>
            <div class="panel-body">
                <label>Surname: </label>@Model.empName.emp_lname<br />
                <label>Employee Code: </label>@Model.empName.emp_num<br />
                <label>Hire date: </label>@Model.empName.emp_hireDATETIME<br />


            </div>


        </div>




        //This second panel shows the chart
    <div class="panel">
        @if (Model.chartData != null)
        {
            //Load the result of the EmployeeOrdersChart view into an image
            //This will make a call to the EmployeeOrdersChart controller action
            <img src="@Url.Action("EmployeeOrdersChart", "Home")" />
        }

    </div>

        //This third panel shows details of individual supplier orders
        //Orders are structured with control breaks, one for each Ship Method
        <div class="panel panel-info">
            @foreach (var group in Model.results)
            {
                <h4>@group.Key:</h4>
                <table class="table table-striped">
                    <tr>
                        <th>Order Date</th>
                        <th>Amount</th>
                        <th>Responsible Employee</th>
                    </tr>
                    @foreach (ReportRecord groupItem in group)
                    {
                        <tr>
                            <td>@groupItem.OrderDate</td>
                            <td>@groupItem.Amount.ToString("C", CultureInfo.CurrentCulture)</td>
                            <td>@groupItem.Employee</td>
                        </tr>
                    }
                    <tr>
                        <td><strong>Total</strong></td>
                        <td><strong>@group.Sum(item => item.Amount).ToString("C", CultureInfo.CurrentCulture)</strong></td>
                        <td></td>
                        <td></td>
                    </tr>
                </table>
                <hr />
            }
            <h3>Grand Total: <strong>@Model.results.Sum(group => group.Sum(item => item.Amount)).ToString("C", CultureInfo.CurrentCulture)</strong></h3>
        </div>
    }